<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
           <WebView 
        		android:id="@+id/webview0"
        			android:layout_width="fill_parent"
        			android:layout_height="fill_parent"
    				/>  

     
    <SlidingDrawer
        android:id="@+id/slidingDrawer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:handle="@+id/handle"
        android:content="@+id/linearLayout1">
             
        <Button
            android:id="@id/handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drawer Handle"/>
               
           <TextView android:id="@id/linearLayout1"
        	android:layout_width="fill_parent"
        	android:text="@string/hello" android:layout_height="929dp"/>
        
        
        
    
    	<LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout2" android:layout_height="fill_parent">
        	
        	<Button android:text="Main" android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content">
        	Browser.load(webview0, OpenemrCalendarSchedule);
        	</Button>
        	
        	<Button android:text="Search" android:id="@+id/button2" android:layout_width="wrap_content" android:layout_height="wrap_content">
        	Browser.load(webview0, OpenemrMessages);
        	</Button>
        	
        	<Button android:text="New Patient" android:id="@+id/button3" android:layout_width="wrap_content" android:layout_height="wrap_content">
        	Browser.load(webview0, OpenemrOfficeNotes);
        	</Button>
        	
    	</LinearLayout>
    	
    </SlidingDrawer>
    
</FrameLayout>

